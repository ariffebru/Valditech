---
// HeroSection.astro — Mobile-First Responsive Hero
// Layout: 1 col (mobile) → 2 col (lg+)
// Stats:  1 col (mobile) → 3 col (sm+)
---

<section
    id="hero"
    class="relative min-h-screen flex items-center overflow-hidden pt-24 pb-16 sm:pt-28 sm:pb-20 lg:pt-36 lg:pb-24"
    style="background: linear-gradient(135deg, #0d1b2e 0%, #0d2235 40%, #082540 70%, #083a3a 100%);"
>
    <!-- Dot pattern overlay -->
    <div
        class="absolute inset-0 pointer-events-none z-0"
        style="background-image: radial-gradient(circle, rgba(0,180,216,0.07) 1px, transparent 1px); background-size: 30px 30px;"
    >
    </div>

    <!-- Wave Canvas (animated by script.js) -->
    <canvas
        id="hero-wave-canvas"
        class="absolute inset-0 w-full h-full pointer-events-none z-[1]"
    ></canvas>

    <!-- Glow blobs -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
        <!-- Top-left purple blob -->
        <div
            class="absolute -top-48 -left-24 w-[600px] h-[600px] rounded-full opacity-50 blur-[90px] animate-[float_15s_ease-in-out_infinite]"
            style="background: radial-gradient(circle, #7b1fa2 0%, transparent 65%);"
        >
        </div>
        <!-- Bottom-right teal blob -->
        <div
            class="absolute -bottom-24 -right-24 w-[500px] h-[500px] rounded-full opacity-25 blur-[90px] animate-[float_20s_ease-in-out_infinite_reverse]"
            style="background: radial-gradient(circle, #00bcd4 0%, transparent 60%);"
        >
        </div>
        <!-- Center purple blob -->
        <div
            class="absolute top-1/4 left-1/3 w-[400px] h-[400px] rounded-full opacity-30 blur-[90px] animate-[float_18s_ease-in-out_3s_infinite]"
            style="background: radial-gradient(circle, #6a0572 0%, transparent 65%);"
        >
        </div>
    </div>

    <!-- ── Main Content ──────────────────────────────── -->
    <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!--
      Grid layout:
        mobile  → 1 column (stacked)
        lg      → 2 columns (content | visual)
    -->
        <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center"
        >
            <!-- ── Left: Text Content ─────────────────── -->
            <div
                class="flex flex-col items-center text-center lg:items-start lg:text-left"
            >
                <!-- Badge -->
                <span
                    class="inline-block mb-5 px-4 py-1.5 text-xs sm:text-sm font-semibold rounded-full
                 border border-cyan-400/30 bg-cyan-400/10 text-cyan-400 tracking-wide"
                >
                    #1 IT Training Partner
                </span>

                <!-- Heading -->
                <h1
                    class="text-3xl sm:text-4xl md:text-5xl xl:text-[3.75rem] font-extrabold leading-tight text-white mb-5
                 [text-wrap:balance]"
                >
                    Upskilling People.<br />
                    <span
                        class="bg-gradient-to-r from-cyan-400 to-violet-500 bg-clip-text text-transparent"
                    >
                        Advancing Organizations.
                    </span>
                </h1>

                <!-- Subtitle -->
                <p
                    class="text-slate-400 text-base sm:text-lg leading-relaxed mb-8 max-w-xl"
                >
                    Get Ahead, Get Certified, Grow Your Skills Through Our Top
                    Rated IT and Management Training Solutions.
                </p>

                <!-- Search Bar -->
                <div
                    class="w-full max-w-xl flex items-center gap-2 bg-white/5 border border-cyan-400/20 rounded-xl px-4 py-2.5
                 focus-within:border-cyan-400 focus-within:shadow-[0_0_0_3px_rgba(0,229,255,0.1)] transition-all duration-200 mb-10"
                >
                    <i
                        data-lucide="search"
                        class="w-5 h-5 text-cyan-400 shrink-0"></i>
                    <input
                        type="text"
                        placeholder="Cari kursus... (e.g. Cybersecurity, PMP)"
                        class="flex-1 bg-transparent outline-none text-sm sm:text-base text-slate-100 placeholder-slate-500"
                    />
                    <button
                        class="shrink-0 px-4 py-2 text-sm font-bold rounded-lg
                   bg-gradient-to-r from-cyan-400 to-cyan-500 text-slate-900
                   hover:from-cyan-300 hover:to-cyan-400 hover:-translate-y-0.5
                   shadow-[0_10px_25px_-5px_rgba(0,229,255,0.35)]
                   transition-all duration-200"
                    >
                        Cari
                    </button>
                </div>

                <!-- Stats — 3 columns on sm+ -->
                <div
                    class="w-full max-w-xl grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-0
                 border-t border-cyan-400/15 pt-6"
                >
                    <div
                        class="flex flex-col items-center sm:items-start sm:pr-6 sm:border-r sm:border-cyan-400/15"
                    >
                        <span
                            class="text-2xl sm:text-3xl font-extrabold text-cyan-400 leading-none mb-1
                         drop-shadow-[0_0_20px_rgba(0,229,255,0.4)]"
                            >3M+</span
                        >
                        <span
                            class="text-xs sm:text-sm text-slate-400 font-medium"
                            >Professionals Trained</span
                        >
                    </div>
                    <div
                        class="flex flex-col items-center sm:items-start sm:px-6 sm:border-r sm:border-cyan-400/15"
                    >
                        <span
                            class="text-2xl sm:text-3xl font-extrabold text-cyan-400 leading-none mb-1
                         drop-shadow-[0_0_20px_rgba(0,229,255,0.4)]"
                            >65+</span
                        >
                        <span
                            class="text-xs sm:text-sm text-slate-400 font-medium"
                            >Global Partners</span
                        >
                    </div>
                    <div
                        class="flex flex-col items-center sm:items-start sm:pl-6"
                    >
                        <span
                            class="text-2xl sm:text-3xl font-extrabold text-cyan-400 leading-none mb-1
                         drop-shadow-[0_0_20px_rgba(0,229,255,0.4)]"
                            >4.8/5</span
                        >
                        <span
                            class="text-xs sm:text-sm text-slate-400 font-medium"
                            >Average Review</span
                        >
                    </div>
                </div>
            </div><!-- /Left -->

            <!-- ── Right: Visual Card ─────────────────── -->
            <!--
        On mobile: hidden (mt-0 + hidden sm:block ... but we show it on md+)
        On md+: visible, centered
        On lg+: naturally in the 2nd grid column
      -->
            <div
                class="hidden md:flex relative items-center justify-center w-full"
            >
                <!-- Code Card — consistent 4/3 aspect ratio -->
                <div
                    class="relative w-full max-w-sm lg:max-w-none aspect-[4/3]
                 bg-slate-900/80 backdrop-blur-xl border border-cyan-400/25 rounded-2xl
                 shadow-[0_20px_60px_-10px_rgba(0,0,0,0.6),0_0_40px_rgba(0,229,255,0.08)]
                 transition-transform duration-500 hover:scale-[1.02]
                 [transform:perspective(1000px)_rotateY(-5deg)_rotateX(5deg)]
                 hover:[transform:perspective(1000px)_rotateY(0)_rotateX(0)]"
                >
                    <!-- Window chrome -->
                    <div
                        class="flex items-center gap-2 px-5 pt-5 pb-4 border-b border-cyan-400/10"
                    >
                        <span class="w-3 h-3 rounded-full bg-[#ff5f56]"></span>
                        <span class="w-3 h-3 rounded-full bg-[#ffbd2e]"></span>
                        <span class="w-3 h-3 rounded-full bg-[#27c93f]"></span>
                    </div>

                    <!-- Code body -->
                    <div
                        class="p-5 sm:p-6 font-mono text-sm sm:text-base space-y-2"
                    >
                        <p class="text-slate-300">
                            const <span
                                class="text-cyan-400 drop-shadow-[0_0_8px_rgba(0,229,255,0.5)]"
                                >skill</span
                            > = new Skill();
                        </p>
                        <p class="text-slate-300">
                            <span
                                class="text-cyan-400 drop-shadow-[0_0_8px_rgba(0,229,255,0.5)]"
                                >skill</span
                            >.upgrade(<span class="text-violet-400"
                                >'Cybersecurity'</span
                            >);
                        </p>
                        <p class="text-slate-300">
                            <span
                                class="text-cyan-400 drop-shadow-[0_0_8px_rgba(0,229,255,0.5)]"
                                >skill</span
                            >.certify();
                        </p>
                        <p
                            class="inline-flex items-center gap-2 mt-4 px-4 py-2 rounded-md
                      bg-emerald-500/10 border border-emerald-500/25 text-emerald-400 text-sm font-semibold"
                        >
                            ✓ Certification Achieved
                        </p>
                    </div>
                </div>

                <!-- Floating badge 1 -->
                <div
                    class="absolute -top-4 -right-2 lg:-right-6 flex items-center gap-2
                 bg-slate-900/90 backdrop-blur-md border border-cyan-400/25 rounded-xl px-4 py-3
                 shadow-lg shadow-black/30 text-sm font-semibold text-white
                 animate-[float_6s_ease-in-out_1s_infinite]"
                >
                    <i
                        data-lucide="shield-check"
                        class="w-5 h-5 text-cyan-400 drop-shadow-[0_0_6px_#00e5ff]"
                    ></i>
                    <span>Cybersecurity ITIL®</span>
                </div>

                <!-- Floating badge 2 -->
                <div
                    class="absolute -bottom-4 -left-2 lg:-left-6 flex items-center gap-2
                 bg-slate-900/90 backdrop-blur-md border border-cyan-400/25 rounded-xl px-4 py-3
                 shadow-lg shadow-black/30 text-sm font-semibold text-white
                 animate-[float_6s_ease-in-out_2s_infinite]"
                >
                    <i
                        data-lucide="cloud"
                        class="w-5 h-5 text-cyan-400 drop-shadow-[0_0_6px_#00e5ff]"
                    ></i>
                    <span>Cloud Architecture</span>
                </div>
            </div><!-- /Right -->
        </div><!-- /grid -->
    </div><!-- /container -->
</section>

<style>
    @keyframes float {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }
        33% {
            transform: translate(12px, -20px) rotate(4deg);
        }
        66% {
            transform: translate(-8px, 8px) rotate(-2deg);
        }
        100% {
            transform: translate(0, 0) rotate(0deg);
        }
    }
</style>
