            .wc-magsafe-ring {
                position: relative;
                width: 84px;
                height: 84px;
                margin: auto; /* Vertically center in screen */
                border-radius: 50%;
                opacity: 0;
                animation: magRingAppear 0.6s ease-out 2.4s forwards;
            }
            .wc-magsafe-ring::before,
            .wc-magsafe-ring::after {
                content: "";
                position: absolute;
                border-radius: 50%;
                animation: magRingSpin 3s linear 2.4s infinite;
            }
            /* Outer ring */
            .wc-magsafe-ring::before {
                inset: 0;
                border: 4px solid transparent;
                border-top-color: #60a5fa;
                border-right-color: #3b82f6;
                box-shadow:
                    0 0 20px rgba(96, 165, 250, 0.6),
                    inset 0 0 10px rgba(96, 165, 250, 0.4);
            }
            /* Inner glow ring */
            .wc-magsafe-ring::after {
                inset: 12px;
                border: 3px solid transparent;
                border-top-color: rgba(147, 197, 253, 0.9);
                border-right-color: rgba(96, 165, 250, 0.6);
                animation-direction: reverse;
                animation-duration: 2s;
            }
            @keyframes magRingAppear {
                to {
                    opacity: 1;
                }
            }
            @keyframes magRingSpin {
                to {
                    transform: rotate(360deg);
                }
            }

