---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content="Upskilling People. Advancing Organizations. Get Ahead, Get Certified, Grow Your Skills Through Our Top Rated Training." />
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
		
		<!-- Lucide Icons -->
		<script is:inline src="https://unpkg.com/lucide@latest"></script>
		
		<!-- Global stylesheet from public dir -->
		<link rel="stylesheet" href="/style.css" />
	</head>
	<body>
		<slot />
		
		<script is:inline>
			// Initialize Lucide Icons on component load or view transition
			document.addEventListener("DOMContentLoaded", () => {
				lucide.createIcons();
			});
		</script>
		<script is:inline src="/script.js"></script>
	</body>
</html>
